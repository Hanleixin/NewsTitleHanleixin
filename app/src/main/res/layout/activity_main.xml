<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.newstitlehanleixin.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main_framelayout"
        android:layout_above="@+id/ll_mian_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>

    <LinearLayout
        android:id="@+id/ll_mian_button"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#E8E8E8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="horizontal">

            <!--主页-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bth_main_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/mian_home_selector"
                    android:text="@string/main_home"
                    android:textSize="12sp"
                    android:textColor="@color/main_button_select_before"
                    android:background="@color/white"/>
            </LinearLayout>

            <!--视频-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bth_main_scover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/main_scover_selector"
                    android:text="@string/main_score"
                    android:textSize="12sp"
                    android:textColor="@color/main_button_select_before"
                    android:background="@color/white"/>
            </LinearLayout>

            <!--关心-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bth_main_care"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/main_care_selector"
                    android:text="@string/main_care"
                    android:textSize="12sp"
                    android:textColor="@color/main_button_select_before"
                    android:background="@color/white"/>
            </LinearLayout>

            <!--我的-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bth_main_mine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/main_mine_selector"
                    android:text="@string/main_mine"
                    android:textSize="12sp"
                    android:textColor="@color/main_button_select_before"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
